<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- Add Student -->
  <servlet>
    <servlet-name>AddStudentServlet</servlet-name>
    <servlet-class>com.example.AddStudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddStudentServlet</servlet-name>
    <url-pattern>/AddStudentServlet</url-pattern>
  </servlet-mapping>

  <!-- Update Student -->
  <servlet>
    <servlet-name>UpdateStudentServlet</servlet-name>
    <servlet-class>com.example.UpdateStudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateStudentServlet</servlet-name>
    <url-pattern>/UpdateStudentServlet</url-pattern>
  </servlet-mapping>

  <!-- Delete Student -->
  <servlet>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <servlet-class>com.example.DeleteStudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <url-pattern>/DeleteStudentServlet</url-pattern>
  </servlet-mapping>
  <!-- View Student -->
  <servlet>
    <servlet-name>ViewStudentsServlet</servlet-name>
    <servlet-class>com.example.ViewStudentsServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ViewStudentsServlet</servlet-name>
    <url-pattern>/ViewStudentsServlet</url-pattern>
</servlet-mapping>


  <!-- Cleanup Listener -->
  <!-- <listener>
    <listener-class>com.example.CleanupListener</listener-class>
  </listener> -->

</web-app>
